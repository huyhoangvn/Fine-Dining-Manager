<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn Bàn"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_dialog_chonBan_FragmentThemHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            />

    <TextView
        android:id="@+id/tvMonDaChon_dialog_chonBan_FragmentThemHoaDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Bàn Đã Chọn: "
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLuu_dialog_chonBan_FragmentThemHoaDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Lưu vào Hóa Đơn"
        android:padding="10dp"/>



</LinearLayout>