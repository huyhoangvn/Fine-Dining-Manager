<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mCardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/linearDatBan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_vitri_DatBan"
                style="@style/mHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vị trí"/>
            <TextView
                android:id="@+id/tv_trangthai_DatBan"
                style="@style/mNormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Còn dùng"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

    <!-- Card cho Recycler View của bàn-->