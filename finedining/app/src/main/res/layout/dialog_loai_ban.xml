<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/tvTieuDeLoaiBan"
            style="@style/mHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm/sửa loại bàn"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_tenLB"
            style="@style/mInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:hint="Tên loại bàn">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edTenLoaiBan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_soChoNgoi"
            style="@style/mInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:hint="Số chỗ ngồi">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edSoChoNgoi"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <CheckBox
            android:id="@+id/chkTrangThaiLoaiBan"
            style="@style/mNormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còn sử dụng?"
            android:layout_gravity="start"
            android:checked="true"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ShaveLoaiBan"
                style="@style/mButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lưu"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_CancelLoaiBan"
                style="@style/mButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <!-- Dialog để thêm hoặc sửa loại bàn-->