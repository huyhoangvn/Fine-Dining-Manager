<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mCardviewMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_TenLoaiBan"
                style="@style/mHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên loại bàn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mLabelText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số chỗ: "/>
                <TextView
                    android:id="@+id/tv_SoChoNgoi"
                    style="@style/mNormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mLabelText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bàn trống: "/>
                <TextView
                    android:id="@+id/tv_SoBanTrongBan"
                    style="@style/mNormalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_TrangThai_LoaiBan"
                style="@style/mBoldText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Còn dùng"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/img_Sua_LoaiBan"
            style="@style/mImageButton"
            android:src="@drawable/ic_sua_thongtin"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>

    <!-- Card cho Recycler View của bàn-->