<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/mCardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTenMon_Cardview_HoaDonChiTiet_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Món: "
                android:textColor="@color/black"
                android:layout_margin="5dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="X"

                />
            <TextView
                android:id="@+id/tvSoLuong_Cardview_HoaDonChiTietmon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Lượng "
                android:textColor="@color/black"
                android:layout_margin="5dp"

                />
            <TextView
                android:id="@+id/tvThanhGia_Cardview_HoaDonChiTietmon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thành giá "
                android:gravity="end"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                />



        </LinearLayout>

        <TextView
            android:id="@+id/tvGiaTien_Cardview_HoaDonChiTiet_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá:  "
            android:textColor="@color/black"
            android:layout_margin="5dp"

            />
    </LinearLayout>

</androidx.cardview.widget.CardView>