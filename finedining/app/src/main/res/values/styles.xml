<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mLogo">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="mAvatarImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--Cardview-->
    <style name="mCardview" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
    </style>

    <style name="mCardviewMedium" parent="mCardview">
        <item name="android:layout_margin">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>
    
    <style name="mCardViewSmall" parent="mCardview">
        <item name="android:layout_margin">5dp</item>
        <item name="cardElevation">2.5dp</item>
    </style>

    <!--Button-->
    <style name="mButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="mFloatingButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/ic_ftbtn_add</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="mImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="mAvatarImageButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
    </style>

    <!--Edit Text-->
    <style name="mInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--Tab layout-->
    <style name="mTabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <!--        <item name="android:textColor">@color/...</item>-->
        <!--        <item name="tabIconTint">@color/...</item>-->
        <!--        <item name="tabIndicatorColor">@color/...</item>-->
    </style>

    <!--Toolbar-->
    <style name="mToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    
    <!--Navigation View-->
    <style name="mNavigationView">
        <item name="android:layout_gravity">start</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>
    <!--Text-->
    <style name="mTitleText" >
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="mHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mNormalText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mBoldText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Check Box-->
    <style name="mCheckBox">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">5dp</item>
        <!--        <item name="buttonTint">?attr/...</item>-->
        <!--        <item name="android:textColor">?attr/...</item>-->
        <item name="android:checked">false</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Progress Dialog-->
    <style name="mProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>
</resources>