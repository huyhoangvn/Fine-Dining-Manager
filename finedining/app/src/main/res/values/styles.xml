<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mLogo">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="mAvatarImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--mRecyclerView-->
    <style name="mRecyclerViewLinear">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="mRecyclerViewGrid">
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
    </style>

    <!--Cardview-->
    <style name="mCardview">
        <item name="cardCornerRadius">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
    </style>

    <style name="mCardviewMedium" parent="mCardview">
        <item name="android:layout_margin">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>
    
    <style name="mCardViewSmall" parent="mCardview">
        <item name="android:layout_margin">5dp</item>
        <item name="cardElevation">2.5dp</item>
    </style>

    <!--Button-->
    <style name="mButton">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="mFloatingButton">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/ic_ftbtn_add</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="mImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleX">1.5</item>
        <item name="android:scaleY">1.5</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="mAvatarImageButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
    </style>

    <!--Edit Text-->
    <style name="mInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="mEditText">
        <item name="android:textSize">16sp</item>
    </style>
    <!--Tab layout-->
    <style name="mTabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:background">@drawable/tablayout_background</item>
        <!--        <item name="android:textColor">@color/...</item>-->
        <!--        <item name="tabIconTint">@color/...</item>-->
        <!--        <item name="tabIndicatorColor">@color/...</item>-->
    </style>

    <!--Toolbar-->
    <style name="mToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:layout_margin">5dp</item>
<!--        <item name="android:background">?attr/colorPrimary</item>-->
        <item name="android:background">@drawable/toolbar_background</item>
    </style>
    
    <!--Navigation View-->
    <style name="mNavigationView">
        <item name="android:layout_gravity">start</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemIconTint">?attr/colorPrimary</item>
        <item name="backgroundColor">?attr/colorSurface</item>
    </style>

    <!--Text-->
        <!--Chữ cực to cho các tiêu đề activity-->
    <style name="mTitleText" >
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

        <!--chữ tiêu đề đầu các dialog, fragment -->
    <style name="mHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

        <!--Chữ cho nhãn của các trường-->
    <style name="mLabelText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

        <!--chữ thường -->
    <style name="mNormalText">
        <item name="android:textSize">16sp</item>
    </style>

        <!--chữ thường mà in đậm thường dùng cho trạng thái-->
    <style name="mBoldText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Check Box-->
    <style name="mCheckBox">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:padding">5dp</item>
        <!--        <item name="buttonTint">?attr/...</item>-->
        <!--        <item name="android:textColor">?attr/...</item>-->
        <item name="android:checked">false</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Progress Dialog-->
    <style name="mProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <!--Dialog-->
    <style name="mDialog">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="background">?attr/colorSurface</item>
    </style>

    <!--Spinner-->
    <style name="mSpinnerItem">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="mSpinner">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <!--Fragment -->
    <style name="mFragment">
        <item name="android:padding">5dp</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <!-- Filter Items -->
        <!--Các đối tượng ấn vào dùng để lọc dữ liệu-->
    <style name="mFilterItem">
        <item name="android:padding">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/filter_item_background_selector</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">false</item>
   </style>
</resources>